<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigpicture.team.ev.IndexActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="80dp"
        android:gravity="end"
        android:text="@string/index_message"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="@dimen/nav_header_vertical_spacing"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/close"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/network_not_working"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="@dimen/nav_header_vertical_spacing"
        android:visibility="gone" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:text="@string/submit"
        android:textSize="@dimen/nav_header_vertical_spacing"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
